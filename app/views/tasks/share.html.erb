<h1>Share your task</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@task) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :email %>
			<%= f.email_field :email, class: 'form-control' %>

			<%= f.submit "Share", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>