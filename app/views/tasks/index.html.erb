<% if logged_in? %>
	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<%= render 'shared/user_info' %>
			</section>
			<section class="task_form">
				<%= render 'shared/task_form' %>
			</section>
		</aside>
	</div>
<% else %>


<div class="col-md-8">
<h3>Tasks (<%= @tasks.count %>)</h3>
	<ol class = "tasks">
	
		<%= render @tasks %>
		
	</ol>

<%= will_paginate @tasks %>
</div>


<% end %>